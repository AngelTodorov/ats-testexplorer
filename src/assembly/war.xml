<?xml version="1.0" encoding="UTF-8"?>
<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
      http://maven.apache.org/xsd/assembly-1.1.2.xsd
  "
>
    <id>ats-testexplorer</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>war</format>
    </formats>

    <files>
        <file>
            <source>${basedir}/src/main/webapp/WEB-INF/web.xml</source>
            <outputDirectory>WEB-INF</outputDirectory>
        </file>
    </files>

    <fileSets>
        <fileSet>
            <outputDirectory>.</outputDirectory>
            <directory>${project.build.directory}/war</directory>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
        <fileSet>
            <outputDirectory>WEB-INF/classes</outputDirectory>
            <directory>${project.build.directory}/classes</directory>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
        <fileSet>
            <outputDirectory>WEB-INF/classes</outputDirectory>
            <directory>${basedir}/src/main/resources</directory>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
        <fileSet>
            <outputDirectory>WEB-INF/classes</outputDirectory>
            <directory>${basedir}/src/main/java</directory>
            <includes>
                <include>**/*.java</include>
                <include>**/*.html</include>
                <include>**/*.properties</include>
                <include>**/*.js</include>
            </includes>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
        
        <fileSet>
            <outputDirectory>chronoscope</outputDirectory>
            <directory>${basedir}/src/main/webapp/chronoscope</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>images</outputDirectory>
            <directory>${basedir}/src/main/webapp/images</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>js</outputDirectory>
            <directory>${basedir}/src/main/webapp/js</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>styles</outputDirectory>
            <directory>${basedir}/src/main/webapp/styles</directory>
        </fileSet>
        
    </fileSets>
</assembly>